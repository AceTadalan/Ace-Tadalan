Addition 


#include <iostream>
using namespace std;

int main() {
    
    int num1=0, num2=0, num3=0;
    float sum=0;
    
    cout<<"Input num1:";
    cin>> num1;
    cout<<"Input num2:";
    cin>> num2;
   cout<<"Input num3:";
   cin>> num3;
   
   sum = num1+num2+num3; 
   
   cout<<"The sum is: " <<sum;
    
    return 0;
}

Subtraction 


#include <iostream>
using namespace std;

int main() {
    
    int num1=0, num2=0, num3=0;
    float difference=0;
    
    cout<<"Input num1:";
    cin>> num1;
    cout<<"Input num2:";
    cin>> num2;
   cout<<"Input num3:";
   cin>> num3;
   
   difference = num1-num2-num3; 
   
   cout<<"The difference is: " <<difference;
    
    return 0;
}

Multiplication 


#include <iostream>
using namespace std;

int main() {
    
    int num1=0, num2=0, num3=0;
    float product=0;
    
    cout<<"Input num1:";
    cin>> num1;
    cout<<"Input num2:";
    cin>> num2;
   cout<<"Input num3:";
   cin>> num3;
   
   product = num1*num2*num3; 
   
   cout<<"The product is: " <<product;
    
    return 0;
}

 Division

 
#include <iostream>
using namespace std;

int main() {
    
    int num1=0, num2=0;
    float quotient=0;
    
    cout<<"Input num1:";
    cin>> num1;
    cout<<"Input num2:";
    cin>> num2;
   
   quotient = num1/num2; 
   
   cout<<"The quotient is: " <<quotient;
    
    return 0;
}
